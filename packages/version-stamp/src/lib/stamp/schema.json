{
  "$schema": "http://json-schema.org/schema",
  "title": "Webpack browser schema for Build Facade.",
  "description": "Browser target options",
  "type": "object",
  "properties": {
    "configuration": {
      "type": "string",
      "description": "The configuration for the build process.",
      "$valueDescription": "configuration",
      "default": "production"
    },
    "target": {
      "type": "string",
      "description": "The target for the build process.",
      "$valueDescription": "configuration"
    },
    "project": {
      "type": "string",
      "description": "The project for the build process.",
      "$valueDescription": "configuration"
    },
    "version": {
      "type": "string",
      "description": "The version to stamp",
      "$valueDescription": "configuration"
    },
    "outputPath": {
      "type": "string",
      "description": "The output path",
      "$valueDescription": "configuration"
    },
    "files": {
      "type": "array",
      "description": "The list of patterns to match the files with",
      "$valueDescription": "configuration"
    },
    "noBuild": {
      "type": "boolean",
      "default": false,
      "description": "Skip build process during deployment."
    }
  }
}
